header
	background url('../images/head/background.png') repeat-x top left
	height 116px
	.ban
		.content
			width	750px
			height  117px
			margin	auto
			text-align	center
			background url('../images/head/circle.png') no-repeat center top
			img.um2
				transform rotate(0deg)
				transition transform 300ms ease-in
				&:hover
					transform rotate(5deg)
					transition transform 500ms ease-out
			.left
				width 310px
				float		left
				.title
					padding-top	22px
				.menu
					text-align	left
					padding-left paddingMenuBorder
			.right
				width 310px
				float		right
				.description
					padding-top	6px
				.menu
					text-align	right
					padding-right paddingMenuBorder
			div > .imageBox
				height 77px
			div > .menu
				height 28px
				overflow hidden
				.item
					height 24px
					padding-top 4px
					color white
					font-size 15px
					display inline-block
					width 126px
					text-decoration none
					&:hover
						text-shadow 0px 0px 2px white
					&.active
						// color #dfe455
						color #ecf083
						text-shadow 0px 0px 2px white
			.um2
				padding-top	8px