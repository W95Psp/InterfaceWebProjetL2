@keyframes clickWhenDisabled {
    0% {top: -20px}
    14% {top: 20px}
    28% {top: -15px}
    42% {top: 15px}
    57% {top: -10px}
    71% {top: 10px}
    85% {top: -5px}
    100% {top: 0px}
}

button, input[type='submit'], input[type='button']
	position relative
	color black
	border 0
	background-color color1
	border-bottom 2px solid darken(color1, 34%)
	&.green
		background-color #2ecc71
		border-bottom 2px solid darken(#2ecc71, 34%)
	&.disabled
		background-color #bdc3c7
		border-bottom 2px solid darken(#bdc3c7, 24%)
		color gray
		opacity 0.5
	&.red
		background-color #ff5761
		border-bottom 2px solid darken(#ff5761, 34%)
	vertical-align top
	border-bottom 
	text-align center
	text-shadow 0 1px rgba(0, 0, 0, 0.3)
	color #fff
	font-size 14px
	padding 8px
	padding-left 30px
	padding-right 30px
	border-radius 3px
	outline 0 none
	&:hover
		transition background-color 100ms ease-out
		background-color darken(color1, 12%)
		&.green
			background-color darken(#2ecc71, 12%)
		&.red
			background-color darken(#ff5761, 12%)
		&.disabled
			background-color #bdc3c7
			border-bottom 2px solid darken(#bdc3c7, 24%)		
	&:active
		padding-top 7px
		margin-bottom -1px
		&.disabled
			padding-top 8px
			margin-bottom 0px