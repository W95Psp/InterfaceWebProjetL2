#dragDropArea
	padding 30px
	margin 20px
	border 2px dashed #DDD
	background-color #EEE
	border-radius 12px
	font-size 40px
	text-align center
	color gray
	&.hover
		background-color #E2FFD6
.part
	width 70%
	margin auto
	border-radius 2px
	border 2px solid #EEE
	padding 20px
	padding-top 10px
.upImg
	position relative
	top 5px
	padding-right 10px
table.preview
	border-collapse collapse
	border-radius 4px
	border 1px solid gray
	margin 10px
	tr
		td:nth-child(2n)
			background-color #EEE
		td
			padding 10px
		&[firstLine='true']
			font-weight bold
			td
				border-bottom 1px dashed gray
.errTwoSameInfo
	padding 10px
	margin 20px
	background-color #e74c3c
	border 2px solid #c0392b
	color white
	text-align center

table.sumup
	width 70%
	margin auto
	border-collapse collapse
	td
		padding 10px
		border 1px solid #EEE
	tr:first-child
		background-color #666
		color white
	tr:nth-child(2n)
		td
			background-color #EEE

#groups
	.group
		padding 5px
		margin 5px
		display inline-block