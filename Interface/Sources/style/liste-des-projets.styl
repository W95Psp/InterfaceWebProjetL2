.projectList
	border 1px solid #95a5a6
	border-radius 5px
	> .head
		div
			img
				width 20px
				opacity 0.6
			span
				display inline-block
				position relative
				margin-left 5px
				top -5px
		.row:first-child
			div
				padding-top 10px
			div
				border-right 1px dotted #95a5a6
			div:last-child
				border-right 0px solid black!important
			background-color #bdc3c7
		.row.search
			background-color white
		input
			width 100%
			border none
			background-color transparent
			background-image url('../images/search.png')
			background-repeat no-repeat
			background-position right center
			opacity 0.3
			height 16px
			&:hover, &:focus
				transition opacity 100ms ease-out
				opacity 0.8
			transition opacity 50ms ease-in
	.noRowToDisplay
		text-align center
		color #CCC
		font-style italic
		padding 20px






.row
	display block
	.titleColumn
		a
			color black
			text-decoration none
			transition text-decoration 100ms linear
		.tools
			display inline-block
			height 40px
			width 22px
			float right
			img
				width 19px
				padding-top 3px
				opacity 0.5
				&:hover
					opacity 1
		width 300px
	.teacherColumn
		width 140px
	.langColumn
		width 140px
	.studentsColumn
		width 120px
	div
		padding 5px
		display table-cell
		vertical-align middle
	img
		width 20px
	&:hover
		a
			border-bottom: 1px solid #DDD
		.arrow-up
			opacity 0.8 !important
	&[included='false']
		.titleColumn
			background none !important
	&[included='true']
		transition background-color 100ms ease-out
		background-color alpha(#2ecc71, 20%)
		.titleColumn
			background-repeat no-repeat
			background-position -20px center
			padding-left 50px
			width (300px - 50px)
.body
	.row
		color black
		text-decoration none
		transition background-color 800ms ease-in
		position relative
		> div
			height 50px
		border-bottom 1px dotted #95a5a6
		.arrow-up
			cursor hand
			transition opacity 100ms ease-in
			opacity 0.04
			position absolute
			left -15px
			top ((76px / 2) - 10px)
			img
				width 12px

.page.liste-des-projets
	position relative
	.confirmation
		position absolute
		right 30px
		top 20px
		width 340px
		overflow hidden
		height 64px
		.here
			transition top 100ms ease-in-out
			height 128px
			position relative
			top 0px
			.partValid
				margin-top 30px
				margin-left 140px
				float right
				clear both
			.partConfirm
				clear both
				width 340px
				height 64px
				b
					font-size 11px
					display block
					text-align center
					margin-bottom 8px
		&[state="active"]
			.here
				transition top 100ms ease-in-out
				top -64px
		&[state="already"]
			.here
				transition top 100ms ease-in-out
				top -128px