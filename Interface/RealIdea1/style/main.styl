color1 = #60c7ff
paddingMenuBorder = 30px
body
	font-family 'Open Sans'
	padding	0px
	margin	0px
	background url('../images/background-body-light.jpg') no-repeat center 80px
	header
		background url('../images/head/background.png') repeat-x top left
		height 116px
		.ban
			.content
				width	750px
				height  117px
				margin	auto
				text-align	center
				background url('../images/head/circle.png') no-repeat center top
				img.um2
					transform rotate(0deg)
					transition transform 300ms ease-in
					&:hover
						transform rotate(5deg)
						transition transform 500ms ease-out
				.left
					width 310px
					float		left
					.title
						padding-top	22px
					.menu
						text-align	left
						padding-left paddingMenuBorder
				.right
					width 310px
					float		right
					.description
						padding-top	6px
					.menu
						text-align	right
						padding-right paddingMenuBorder
				div > .imageBox
					height 77px
				div > .menu
					height 28px
					overflow hidden
					.item
						height 24px
						padding-top 4px
						color white
						font-size 15px
						display inline-block
						width 126px
						text-decoration none
						&:hover
							text-shadow 0px 0px 2px white
						&.active
							// color #dfe455
							color #ecf083
							text-shadow 0px 0px 2px white
				.um2
					padding-top	8px
	.page
		width 760px
		padding 20px
		margin auto
		&.presentation
			.fds
				width 210px
			.text
				text-align justify
				margin-left 230px
				margin-top 0px
				padding-top 1px

table.projectList
	img.language
		width 18px
		opacity 0.4
		&:hover
			opacity 1
	width 95%
	margin auto
	border-collapse collapse
	.titleColumn
		width 40%
	.teacherColumn
		width 20%
	.langColumn
		width 25%
	.studentsColumn
		width 15%
	tr
		th
			background-color #EEE
			border-bottom 1px solid #DDD
			border-top 1px solid #DDD
			.icon
				width 18px
				padding 3px
				padding-top 8px
				padding-right 10px
				opacity 0.6
			span
				display inline-block
				position relative
				top -5px
		th:last-child
			border-right 1px solid #DDD
		th:first-child
			border-left 1px solid #DDD
		th
			input
				width 100%
				border none
	tr.content:hover
		transform-origin center center
		transform scale(1.03)
		transition transform 200ms ease-out
	tr.content
		transition transform 100ms ease-out
	tr:nth-child(2n)
		td
			background-color #f3fafe
	tr:nth-child(2n+1)
		td
			background-color white
	td
		padding 2px
		padding-left	6px
		padding-right	6px
		border-bottom 1px dotted #EEE
		&.empty
			font-size 9px
			text-align center
			color #AAA
			font-style italic
	tr
		td:last-child
			border-right 1px solid #DDD
		td:first-child
			border-left 1px solid #DDD
	tr:last-child
		td
			border-bottom 1px solid #DDD